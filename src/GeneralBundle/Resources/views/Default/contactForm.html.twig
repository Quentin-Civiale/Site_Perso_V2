{#{% extends 'base.html.twig' %}#}

{% block contactForm %}

    <div class="modal fade" id="ModalContactFormView" tabindex="-1" role="dialog" aria-labelledby="logModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="dialog">
            <div class="modal-content">
                <div class="card card-body contact-card">
                    <div class="col-lg-10 offset-lg-1">

                        {{ form_start(form) }}
                            <h1>Me contacter</h1>
                            <h2>Je vous réponds dans les plus brefs délais.</h2>
                            <br/>
                            <h3>Merci de bien vouloir compléter le formulaire ci-dessous:</h3>
                            <br/>
                            <div class="form-row">
                                <div class="col">
                                    <label for="inputFirstname">Prénom</label>
                                    {{ form_widget(form.firstname) }}
                                </div>
                                <div class="col">
                                    <label for="inputLastname">Nom</label>
                                    {{ form_widget(form.lastname) }}
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="form-group">
                                <label for="formSubject">Sujet:</label>
                                {{ form_widget(form.subject) }}
                            </div>
                            <div class="form-group">
                                <label for="formMessage">Message:</label>
                                {{ form_widget(form.message) }}
                            </div>
                            <div class="custom-control custom-checkbox">
                                {{ form_widget(form.agreement) }}
                                <label class="custom-control-label" for="contact_agreement">
                                    J'accepte que les informations saisies soient exploitées par le site quentin-civiale.fr
                                    dans le simple cadre de contact par mail (pour plus d'informations, veuillez vous
                                    diriger vers les <a href="{{ path('legalNotice') }}" class="legalNotice-btn">Mentions Légales</a> du site).
                                </label>
                            </div>
                            <br/>
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                <button type="submit" id="form-submit" class="btn btn-submit-form btn-lg" onclick="analyticsContactForm('sendContactForm')">Envoyer mon message</button>
                            </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}